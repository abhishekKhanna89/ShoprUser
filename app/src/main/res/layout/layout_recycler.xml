<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:text="Thursday,Jul 05,2020"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionListRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/greenLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/greenbtn">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_down"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_toStartOf="@+id/price"
            android:layout_toEndOf="@+id/card"
            android:layout_toRightOf="@id/card"
            android:text="Add Money"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t"
            android:layout_toStartOf="@+id/bal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/card"
            android:layout_toRightOf="@id/card"
            android:text="Transaction ID : #000111"
            android:textSize="15sp"
            android:singleLine="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(+) 45,523"
            android:textColor="#25d762"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/price"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="Bal :5600"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/redLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/redbtn">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_up"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_toStartOf="@+id/price1"
            android:layout_toEndOf="@+id/card1"
            android:layout_toRightOf="@id/card1"
            android:text="Rs 10,000 received from\nMohamed Imran\n(xxxxxxx9876)"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:layout_toStartOf="@+id/bal1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_toEndOf="@+id/card1"
            android:layout_toRightOf="@id/card1"
            android:text="Transaction ID : #000111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(-) 45,523"
            android:textColor="#f84948"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/price1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="Bal :5600"/>
    </RelativeLayout>
</LinearLayout>