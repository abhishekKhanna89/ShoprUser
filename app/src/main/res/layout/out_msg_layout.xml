        <!--Todo:- Add Wallet-->
        <me.himanshusoni.chatmessageview.ChatMessageView
            android:id="@+id/addWalletLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cmv_arrowPosition="right"
            app:cmv_backgroundColor="#fff"
            app:cmv_backgroundColorPressed="#FFBABABA"
            app:cmv_cornerRadius="3dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/addWalletMsgText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/addWalletBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Money"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="@color/green"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addwalletDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="11:00 AM"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </me.himanshusoni.chatmessageview.ChatMessageView>

        <!--Todo:- Payment-->
        <me.himanshusoni.chatmessageview.ChatMessageView
            android:id="@+id/paymentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cmv_arrowPosition="right"
            app:cmv_backgroundColor="#fff"
            app:cmv_backgroundColorPressed="#FFBABABA"
            app:cmv_cornerRadius="3dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Please make a payment"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/paymentBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pay"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="@color/green"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paymentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="11:00 AM"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </me.himanshusoni.chatmessageview.ChatMessageView>
        <!--Todo:- order confirm-->
        <me.himanshusoni.chatmessageview.ChatMessageView
            android:id="@+id/orderConfirmLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            app:cmv_arrowPosition="right"
            app:cmv_backgroundColor="#fff"
            app:cmv_backgroundColorPressed="#FFBABABA"
            app:cmv_cornerRadius="3dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/orderConfirmMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Please make a payment"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/detailsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="@color/green"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderConfirmDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="11:00 AM"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </me.himanshusoni.chatmessageview.ChatMessageView>
    </LinearLayout>
</ScrollView>
