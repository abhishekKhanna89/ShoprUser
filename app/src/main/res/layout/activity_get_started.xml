<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.GetStartedActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="@dimen/dimen_30dp"
       android:layout_marginRight="@dimen/dimen_30dp"
       android:layout_marginTop="@dimen/dimen_30dp"
       android:layout_marginBottom="@dimen/dimen_15dp"

       >
       <androidx.viewpager.widget.ViewPager
           android:id="@+id/viewpager"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           />

       <LinearLayout
           android:id="@+id/Selector_indicator"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_alignBottom="@+id/viewpager"

           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginBottom="@dimen/dimen_5dp"
               android:orientation="horizontal"
               >
               <ImageView
                   android:id="@+id/indicator1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_brightness_1_24"
                   android:layout_margin="@dimen/dimen_5dp"
                   />

               <ImageView
                   android:id="@+id/indicator2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_panorama_fish_eye_24"
                   android:layout_margin="@dimen/dimen_5dp"

                   />
               <ImageView
                   android:id="@+id/indicator3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_panorama_fish_eye_24"
                   android:layout_margin="@dimen/dimen_5dp"

                   />
               <ImageView
                   android:id="@+id/indicator4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:src="@drawable/ic_baseline_panorama_fish_eye_24"
                   android:layout_margin="@dimen/dimen_5dp"

                   />
           </LinearLayout>

           <TextView
               android:id="@+id/SkipButton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Skip"
               android:layout_alignBottom="@+id/Selector_indicator"
               android:textSize="@dimen/dimen_20dp"
               android:textColor="@color/black"
               android:gravity="center"
               android:visibility="gone"
               android:layout_marginBottom="@dimen/dimen_20dp"
               android:layout_alignParentBottom="true"
               />

           <Button
               android:id="@+id/Started"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Get Started"
               android:layout_alignBottom="@+id/Selector_indicator"
               android:textSize="@dimen/dimen_15dp"
               android:textColor="@color/white"
               android:gravity="center"
               android:visibility="gone"
               android:background="@null"
               android:backgroundTint="@color/layout_bg"
               android:layout_marginBottom="@dimen/dimen_20dp"
               android:layout_alignParentBottom="true"

               />

       </LinearLayout>


   </RelativeLayout>
</RelativeLayout>