<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <me.himanshusoni.chatmessageview.ChatMessageView
            android:id="@+id/paymentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cmv_arrowPosition="right"
            app:cmv_backgroundColor="@color/my_chat_color"
            app:cmv_backgroundColorPressed="#FFBABABA"
            app:cmv_cornerRadius="3dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:elevation="2dp"
                    android:text="Please make a payment"
                    style="@style/userTextMsg" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/paymentBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:text="Pay"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/rounded_gradient_button"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/paymentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/userTextTime"
                        android:text="11:00 AM"
                        />

                    <ImageView
                        android:id="@+id/read_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/remoteBackground"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_done_24"
                        tools:ignore="UseAppTint" />

                </RelativeLayout>

            </LinearLayout>
        </me.himanshusoni.chatmessageview.ChatMessageView>

    </LinearLayout>
</LinearLayout>