        android:hardwareAccelerated="true"
        android:icon="@drawable/splash_transparent"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.Shoper"
        tools:ignore="HardcodedDebugMode"
        tools:targetApi="n">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="fabaabc4273e4e67d52a5410e9b2fa7a59088976" />

        <activity
            android:name=".SendBird.call.VideoCallActivity"
            android:configChanges="orientation|smallestScreenSize|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/CallTheme"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SendBird.call.VoiceCallActivity"
            android:configChanges="orientation|smallestScreenSize|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/CallTheme"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.InitilizingActivity"
            android:label="@string/title_activity_initilizing"
            android:theme="@style/Theme.Shoper.NoActionBar" />
        <activity
            android:name=".activity.CallingServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CallTheme" />
        <activity
            android:name=".activity.ImageZoomActivity"
            android:label="Gallery"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HelpActivity"
            android:label="Help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FindingShopprActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FindingTheme" />
        <activity
            android:name=".activity.RegisterMerchantActivity"
            android:label="Register as a Merchant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NotificationListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activity.OrderDetailsActivity"
            android:label="Order Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.OrderConfirmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChatDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChatTheme" />
        <activity
            android:name=".activity.ChatHistoryActivity"
            android:label="Chat History"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TrackLoactionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ShareLocationActivity"
            android:label="Share Location"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ViewCartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChatTheme">
            <intent-filter>
                <action android:name="chat_screen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UpdateProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddMoneyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SotoreDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OtpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/loginTheme" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/loginTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_UOxHxOruy0x9uP" />

        <activity
            android:name=".MapsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FindingTheme" />
        <activity
            android:name=".StorelistingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/loginTheme" />
        <activity
            android:name=".activity.GetStartedActivity"
            android:configChanges="orientation|smallestScreenSize|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/CallTheme"
            tools:ignore="LockedOrientationActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <service
            android:name=".notifications.FirebaseMessageReceiver"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="rn-push-notification-channel-id-4-default-300" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <service
            android:name=".SendBird.fcm.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
